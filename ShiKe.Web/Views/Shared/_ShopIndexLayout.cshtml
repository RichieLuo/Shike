@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html lang="en">
<head>
    @*<meta name="viewport" content="width=device-width" />*@
    <meta charset="utf-8">
    <title>@ViewBag.Title - 美食每刻</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/base.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/non-responsive.css" rel="stylesheet" />
    <link href="~/css/Index/indexFooter.css" rel="stylesheet" />
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body style="padding:0px;">

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/for-home-index.js"></script>
    @Html.Partial("_ForLayoutNav.cshtml")
    <div class="container disTop">
        <div class="row" style="height:80px;padding:0px 15px;">
            <div class="col-xs-6" style="padding:0" ;>
                <a href="#"><img src="~/images/logo_2.png" style="width:140px;height:60px;" alt="Alternate Text" /></a>

            </div>
            <div class="col-xs-6" style="padding:0;text-align:center;">
                <form action="/" method="post" class="navbar-form" style="width:600px;">
                    <div class="input-group">
                        <div class="input-group-addon" style="padding:0;border:0;">
                            <select class="form-control">
                                <option>本店</option>
                                <option>全站</option>
                            </select>
                        </div>
                        <input type="text" name="name" value="" placeholder="商品/店铺" class="form-control" style="width:300px" />
                        <button class="btn btn-success" type="submit" style="border-radius:0px;border-color:#C72E00; background-color:#C72E00">搜索</button>
                    </div>

                    <div style="padding-top:5px;overflow:hidden">
                        <a href="../../Home/Unfinished" style="color:#000;">我是标签</a>
                        <a href="../../Home/Unfinished" style="color:#000;margin:0px 3px">我是标签</a>
                        <a href="../../Home/Unfinished" style="color:#000;margin:0px 3px">标签</a>
                        <a href="../../Home/Unfinished" style="color:#000;margin:0px 3px">标签啊</a>
                        <a href="../../Home/Unfinished" style="color:#000;margin:0px 3px">我是标签</a>
                        <a href="../../Home/Unfinished" style="color:#000;margin:0px 3px">我是标签</a>
                        <a href="../../Home/Unfinished" style="color:#000;">我是标签</a>
                    </div>
                </form>

            </div>
        </div>
        <hr />
    </div>

    <div class="container">

        <div class="row">
            @if (ViewBag.CurrShop.ShopBanner == null)
            {
                <img src="~/images/shopbanner.jpg" class="img-thumbnail" alt="店铺横幅" style="width:100%;height:180px">
            }
            else
            {
                <img src="@ViewBag.CurrShop.ShopBanner.UploadPath" class="img-thumbnail" alt="店铺横幅" style="width:100%;height:180px">
            }
        </div>
        <div class="row" style="position: relative">
            <div class="col-xs-2" style="bottom:0px;position: absolute">
                @if (@ViewBag.CurrShop.ShopAvatar == null)
                {
                    <img src="~/images/dpDefault.jpg" class="img-thumbnail" width="150px" height="150px" alt="店铺头像">
                }
                else
                {
                    <img src="@ViewBag.CurrShop.ShopAvatar.UploadPath" class="img-thumbnail" width="150px" height="150px" alt="店铺头像">
                }
            </div>
            <div class="col-xs-10">
                <div class="row" style="margin-left: 170px">
                    <div class="col-xs-3" style="padding: 0">
                        <h2 style="margin-top: 5px">@ViewBag.CurrShop.Name</h2>
                    </div>

                    <div class="col-xs-6" style="bottom: -20px">
                        <span>评分：@ViewBag.CurrShop.Grade</span> <span>关注：@ViewBag.CurrShop.Collection</span>
                    </div>

                </div>
                <div class="row" style="margin-left: 170px">
                    <span>
                        @ViewBag.CurrShop.Description
                    </span>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 10px">
            <nav class="navbar navbar-default" role="navigation" style="border-radius:0px;">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/" style="background-color:transparent; ">首页</a>
                </div>
                <div>
                    <ul class="nav navbar-nav">
                        <li><a href="../../Home/ShopForBusiness" style="background-color:transparent; ">店铺首页</a></li>
                        <li><a href="../../Home/Unfinished" style="background-color:transparent; ">买家最爱</a></li>
                        <li><a href="../../Home/Unfinished" style="background-color:transparent; ">卖家推荐</a></li>
                        <li><a href="../../Home/Unfinished" style="background-color:transparent; ">近期上新</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>


    @Html.Partial("_ForLayoutFooter.cshtml")
</body>
</html>