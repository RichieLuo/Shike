@model ShiKe.ViewModels.BusinessOrganization.SK_WM_ShopVM
@{
    Layout = null;
}

<form class="form-horizontal" asp-action="SaveExecuteIllegal" id="ExecuteIllegalForm" data-toggle="validator" role="form">
    <input type="hidden" id="ShopID" name="ShopID" value="@Model.ID">
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">店铺名称：</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly="readonly" name="Name" id="Name" placeholder="店铺名称" value="@Model.Name">
        </div>
    </div>
    <div class="form-group">
        <label for="ShopState" class="col-sm-2 control-label">处理方式：</label>
        <div class="col-sm-10">
            <select name="ShopState" id="IllegalCategory">
                <option value="已停封">停封店铺</option>
                <option value="已启用">正常使用</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="IllegalCategory" class="col-sm-2 control-label">违规分类：</label>
        <div class="col-sm-10">
            <select name="IllegalCategory" id="IllegalCategory">
                <option value="违规分类1">违规分类1</option>
                <option value="违规分类2">违规分类2</option>
                <option value="违规分类3">违规分类3</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-sm-2 control-label">违规描述：</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="4" name="Description" id="Description" placeholder="请填写违规描述"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" onclick="postGoodsEditForm()">确认提交</button>
        </div>
    </div>
</form>
