@model IEnumerable<ShiKe.ViewModels.BusinessOrganization.SK_WM_GoodsCategoryVM>
@{
    ViewData["Title"] = "商品类别管理";
}
<meta charset="utf-8">
<h3>商品类别管理</h3>
<div class="table-responsive">
    <a href="../GoodsCategory/Create/@Guid.NewGuid().ToString()" type="button" class="btn btn-success pull-right">新建数据</a>
    <table class="table table-striped" style="text-align:center;">
        <thead>
            <tr>
                <th style="text-align:center;">类别编号</th>
                <th style="text-align:center;">类别名称</th>
                <th style="text-align:center;">类别描述</th>
                <th style="text-align:center;">操作</th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = 0;
                foreach (var sk_wm_GoodsCategory in Model)
                {
                    counter++;
                    <tr>
                        <td>@counter</td>
                        <td style="width:130px">@sk_wm_GoodsCategory.Name</td>
                        <td>@sk_wm_GoodsCategory.Description</td>               
                        <td>
                            <div class="btn-group btn-group-xs" role="group" aria-label="...">
                                <button type="button" class="btn btn-default"
                                        onclick="openDeleteModal('@sk_wm_GoodsCategory.ID.ToString()','你所选择删除的商品类别名称是：@sk_wm_GoodsCategory.Name，请确认是否继续执行。')">
                                    删除
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

